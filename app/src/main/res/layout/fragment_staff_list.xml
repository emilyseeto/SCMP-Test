<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.stafflist.StaffListFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding_general">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/staffListTokenTxt"
            style="@style/Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_general" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/staffListContent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/staffListNoRecordTxt"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/bg_staff_item"
            android:gravity="center"
            android:text="@string/staff_list_no_record"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/staffListLoadingContainer"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/bg_loading_overlay"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_small"
            android:text="@string/staff_list_loading_data" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</FrameLayout>